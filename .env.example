# =============================================================================
# POCKET POS - Environment Configuration Template
# =============================================================================
# Copy this file to .env.dev, .env.prod, or .env and fill in the values
# DO NOT commit actual .env files to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=47821
POSTGRES_DB=pocketpos_db
POSTGRES_USER=pocketpos_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_ROOT_PASSWORD=your_root_password_here

# Database URL for applications
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=58392
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_HOST=kafka
KAFKA_PORT=54629
KAFKA_EXTERNAL_PORT=9093
KAFKA_INTERNAL_PORT=56485
ZOOKEEPER_HOST=zookeeper
ZOOKEEPER_PORT=55374

# Kafka Topics
KAFKA_TOPIC_SALES=pos-sales
KAFKA_TOPIC_INVENTORY=pos-inventory
KAFKA_TOPIC_USERS=pos-users
KAFKA_TOPIC_NOTIFICATIONS=pos-notifications

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
ENVIRONMENT=development

# API Configuration
API_HOST=nestjs-api
API_PORT=39847
API_URL=http://${API_HOST}:${API_PORT}

# Web Client Configuration
WEB_HOST=nextjs-web
WEB_PORT=41923
WEB_URL=http://${WEB_HOST}:${WEB_PORT}

# Mobile App Configuration
MOBILE_HOST=react-native-mobile
MOBILE_PORT=52764
MOBILE_URL=http://${MOBILE_HOST}:${MOBILE_PORT}

# Mobile Development Ports
MOBILE_METRO_PORT=52764
MOBILE_EXPO_PORT=53851
MOBILE_EXPO_DEV_PORT=54928
MOBILE_EXPO_DEVTOOLS_PORT=55039
MOBILE_EXPO_WEB_PORT=56140

# Nginx Configuration
NGINX_HTTP_PORT=58071
NGINX_HTTPS_PORT=58443

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_encryption_key_here_32_characters
HASH_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:41923,http://localhost:52764
CORS_CREDENTIALS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@pocketpos.com

# Payment Gateway (Optional)
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_api_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# File Storage (Optional)
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Health Check
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Network
DOCKER_NETWORK=pocketpos-network
DOCKER_SUBNET=172.20.0.0/16

# Container Resource Limits
POSTGRES_MEMORY_LIMIT=512m
REDIS_MEMORY_LIMIT=256m
KAFKA_MEMORY_LIMIT=1g
ZOOKEEPER_MEMORY_LIMIT=256m
API_MEMORY_LIMIT=512m
WEB_MEMORY_LIMIT=256m
MOBILE_MEMORY_LIMIT=256m

# Volume Paths
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
KAFKA_DATA_PATH=./data/kafka
ZOOKEEPER_DATA_PATH=./data/zookeeper
LOGS_PATH=./data/logs
UPLOADS_PATH=./data/uploads

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Hot Reload
HOT_RELOAD_ENABLED=true
WATCH_POLL=1000

# Debug
DEBUG_ENABLED=true
DEBUG_PORT=9229

# Development Tools
DEV_TOOLS_ENABLED=true
STORYBOOK_ENABLED=false

# =============================================================================
# PRODUCTION SPECIFIC
# =============================================================================

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Performance
CLUSTER_MODE=false
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1000

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Features
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_MULTI_STORE=false
FEATURE_LOYALTY_PROGRAM=false
FEATURE_INVENTORY_TRACKING=true
FEATURE_REPORTING=true

# =============================================================================
# COMPLIANCE
# =============================================================================

# GDPR
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365

# PCI DSS
PCI_COMPLIANCE_MODE=false
CARD_DATA_ENCRYPTION=true

# Audit
AUDIT_LOGGING=true
AUDIT_RETENTION_DAYS=2555  # 7 years

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all 'your_*_here' values with actual secure values
# 2. Use strong passwords (minimum 16 characters with mixed case, numbers, symbols)
# 3. Generate unique secrets for each environment
# 4. Never commit actual .env files to version control
# 5. Use environment-specific files (.env.dev, .env.prod)
# 6. Regularly rotate secrets and passwords
# 7. Enable SSL/TLS in production
# 8. Configure proper backup strategies for production
# 9. Review and adjust resource limits based on actual usage
# 10. Enable monitoring and alerting in production