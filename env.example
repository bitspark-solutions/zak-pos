# =============================================================================
# ZAKPOS - Environment Variables Template
# =============================================================================
# Copy this file to .env and customize the values for your environment
# This file contains all the environment variables needed for ZakPOS

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment
NODE_ENV=development

# Application version and build info
VERSION=1.0.0
BUILD_DATE=
VCS_REF=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL configuration
POSTGRES_DB=zakpos_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_PORT=47821
POSTGRES_MULTIPLE_DATABASES=zakpos_dev,zakpos_test,zakpos_prod

# Database URL (constructed from above)
DATABASE_URL=postgresql://postgres:postgres123@localhost:47821/zakpos_dev

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis configuration
REDIS_PASSWORD=redis123
REDIS_PORT=58392
REDIS_URL=redis://:redis123@localhost:58392

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================

# Kafka configuration
KAFKA_PORT=54629
KAFKA_INTERNAL_PORT=56485
KAFKA_EXTERNAL_HOST=localhost
KAFKA_BROKERS=localhost:54629

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server configuration
API_PORT=39847
API_PREFIX=api/v1
API_BUILD_TARGET=runtime

# CORS configuration
CORS_ORIGIN=http://localhost:41923,http://localhost:96140

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =============================================================================
# WEB CLIENT CONFIGURATION
# =============================================================================

# Web client configuration
WEB_PORT=41923
WEB_BUILD_TARGET=runtime

# Next.js public environment variables
NEXT_PUBLIC_API_URL=http://localhost:39847/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:39847
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# Mobile app configuration
MOBILE_METRO_PORT=52764
MOBILE_EXPO_PORT=53851
MOBILE_EXPO_DEV_PORT=54928
MOBILE_EXPO_DEVTOOLS_PORT=55039
MOBILE_EXPO_WEB_PORT=56140
MOBILE_BUILD_TARGET=development

# Expo configuration
EXPO_TOKEN=
EAS_PROJECT_ID=

# Mobile app public environment variables
EXPO_PUBLIC_API_URL=http://localhost:39847/api/v1
EXPO_PUBLIC_WS_URL=ws://localhost:39847

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================

# Nginx configuration
NGINX_HTTP_PORT=58071
NGINX_HTTPS_PORT=58443

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File upload settings
FILE_UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging configuration
LOG_LEVEL=info

# Sentry configuration
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Development tools ports
PGADMIN_PORT=58050
REDIS_INSIGHT_PORT=58001
KAFKA_UI_PORT=58080
MAILHOG_SMTP_PORT=58025
MAILHOG_WEB_PORT=58026
FILEBROWSER_PORT=58082

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production paths
DATA_PATH=/opt/zakpos
LOGS_PATH=/opt/zakpos
BACKUP_PATH=/opt/zakpos

# Production monitoring
GRAFANA_ADMIN_PASSWORD=grafana_admin_password
PROMETHEUS_PORT=52764
GRAFANA_PORT=58851

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
BACKUP_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# API performance
MAX_WORKERS=4

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security settings
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true
CLUSTER_MODE=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Change all default passwords before production use
# 2. Generate strong JWT secrets for production
# 3. Configure proper SMTP settings for email functionality
# 4. Set up proper SSL certificates for HTTPS
# 5. Configure monitoring and alerting for production
# 6. Set up proper backup strategies
# 7. Configure proper logging and log rotation
# 8. Set up proper security scanning and updates
# 9. Configure proper resource limits and scaling
# 10. Set up proper disaster recovery procedures

# =============================================================================
# END OF ENVIRONMENT VARIABLES
# =============================================================================
